<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 应用基础主题定义 -->
    <style name="Theme.DreamIsland" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/tertiary_50</item>
        <item name="colorSecondary">@color/tertiary_30</item>
        <item name="toolbarStyle">@style/Widget.DreamIsland.Toolbar</item>
    </style>

    <style name="Widget.DreamIsland.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="TimePickerDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/tertiary_30</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/tertiary_50</item>
    </style>

</resources>
