<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 应用基础主题定义 -->
    <style name="Theme.DreamIsland" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主要品牌颜色 -->
        <item name="colorPrimary">@color/material_dynamic_tertiary20</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_tertiary30</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色 -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色设置 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- 在此处添加其他主题自定义项 -->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>
