<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamIsland" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorSecondary">@color/teal_200</item>
        <!-- System bars -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.DreamIsland.Toolbar</item>
    </style>

    <style name="Widget.DreamIsland.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>
