<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".ui.profile.AlarmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingTop="?attr/actionBarSize">

        <!-- 闹钟类型切换 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/typeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center"
                android:background="@color/tertiary_10">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSleep"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="入睡提醒"
                    app:chipBackgroundColor="@color/tertiary_50"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWake"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="起床提醒"
                    app:chipBackgroundColor="@color/tertiary_50" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 启用闹钟开关 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/enableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/typeCard"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@color/tertiary_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_alarm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_50" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/enableAlarmSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 时间选择器 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/enableCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/tertiary_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="16dp" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/tertiary_20"
                    android:theme="@style/TimePickerDark" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 重复设置 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/repeatCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/timeCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/tertiary_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_repeat"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/mondayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/tuesdayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tuesday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/wednesdayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wednesday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/thursdayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thursday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/fridayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/friday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/saturdayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday"
                    android:textColor="@color/tertiary_50"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/sundayCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tertiary_50"
                    android:text="@string/sunday" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

