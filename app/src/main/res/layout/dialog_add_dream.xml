<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记录梦境"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center">
    </TextView>

    <EditText
        android:id="@+id/et_dream_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="梦境标题"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLength="50"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_medium">
    </EditText>

    <EditText
        android:id="@+id/et_dream_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="详细描述您的梦境..."
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:maxLength="1000"
        android:gravity="top"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_medium">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="梦境类型："
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">
    </TextView>

    <RadioGroup
        android:id="@+id/rg_dream_nature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_good_dream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好梦"
            android:textColor="@color/black"
            android:checked="true"
            android:textSize="14sp">
        </RadioButton>

        <RadioButton
            android:id="@+id/rb_bad_dream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="噩梦"
            android:textColor="@color/black"
            android:textSize="14sp">
        </RadioButton>

        <RadioButton
            android:id="@+id/rb_other_dream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="其他"
            android:textColor="@color/black"
            android:textSize="14sp">
        </RadioButton>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/cb_make_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="14sp">
        </CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开这个梦境"
            android:textColor="@color/black"
            android:textSize="14sp">
        </TextView>
    </LinearLayout>

    <!-- 标签输入区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标签（最多5个，每个不超过10字符）："
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <EditText
            android:id="@+id/et_tag_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="输入标签"
            android:textSize="14sp"
            android:maxLength="10"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_medium">
        </EditText>
        <Button
            android:id="@+id/btn_add_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_background_save"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>

    <!-- 已添加标签显示区域 -->
    <LinearLayout
        android:id="@+id/layout_tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/gray_light"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
            <LinearLayout
                android:id="@+id/layout_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/button_background_cancel"
            android:padding="12dp"
            android:layout_marginRight="8dp">
        </Button>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/button_background_save"
            android:padding="12dp"
            android:layout_marginLeft="8dp"
            android:enabled="true"
            android:clickable="true">
        </Button>
    </LinearLayout>
</LinearLayout>